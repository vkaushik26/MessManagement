<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menuActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_span="5"
        android:gravity="center"
        android:padding="16dp"
        android:text=" WEEKLY MESS MENU"
        android:textSize="18sp"
        android:textStyle="bold"
        />


    <Button

        android:id="@+id/sunday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/heading"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:gravity="left"
        android:onClick="sundayPage"
        android:padding="16dp"
        android:text="sunday"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <Button

        android:id="@+id/monday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sunday"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:gravity="left"
        android:onClick="mondayPage"
        android:padding="16dp"
        android:text="monday"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <Button

        android:id="@+id/tuesday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/monday"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:gravity="left"
        android:onClick="tuesdayPage"
        android:padding="16dp"
        android:text="tuesday"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <Button

        android:id="@+id/wednesday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tuesday"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:gravity="left"
        android:onClick="wednesdayPage"
        android:padding="16dp"
        android:text="wednesday"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <Button

        android:id="@+id/thursday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/wednesday"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:gravity="left"
        android:onClick="thursdayPage"
        android:padding="20dp"
        android:text="thursday"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <Button

        android:id="@+id/friday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/thursday"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:gravity="left"
        android:onClick="fridayPage"
        android:padding="16dp"
        android:text="friday"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <Button

        android:id="@+id/saturday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/friday"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:gravity="left"
        android:onClick="saturdayPage"
        android:padding="20dp"
        android:text="saturday"
        android:textSize="20sp"
        android:textStyle="bold"
        />

</RelativeLayout>


</ScrollView>
