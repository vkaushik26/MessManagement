<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.ritz.survey_main.suggestionActivity"
        android:padding="16dp">


        <TextView
            android:id="@+id/improvement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:fontFamily="sans-serif"
            android:paddingBottom="20dp"
            android:text="Please give suggestions for further improvement"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/ans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/improvement"
            android:ems="10"
            android:gravity="top"
            android:hint="Further Suggestion"
            android:inputType="textMultiLine"
            android:lines="15" />

        <Button
            android:id="@+id/suggSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/ans"
            android:layout_marginTop="16dp"
            android:layout_centerHorizontal="true"
            android:text="Submit" />

        </RelativeLayout>
</ScrollView>