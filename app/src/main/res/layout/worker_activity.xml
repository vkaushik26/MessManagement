<?xml version="1.0" encoding="utf-8"?>
<ScrollView
   xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Worker_class">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image"
        android:layout_width="200dp"
        android:layout_height="200dp"
       android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/mess"/>


    <Button
        android:id="@+id/mess_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="15dp"
        android:drawableLeft="@drawable/food"
        android:text="MENU"
        android:textColor="#FFFF"
        android:textSize="17sp"
        android:textStyle="bold"
        />



   <!-- <Button
        android:id="@+id/budget_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mess_menu"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="5dp"
        android:drawableLeft="@drawable/input"
        android:text="BUDGET INFO"
        android:textColor="#FFFF"
        android:textSize="17sp"
        android:textStyle="bold"
        />-->


    <Button
        android:id="@+id/stock_bal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mess_menu"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="5dp"
        android:drawableLeft="@drawable/stock"
        android:text="STOCK UPDATE"
        android:textColor="#FFFF"
        android:textSize="17sp"
        android:textStyle="bold"
        />

    <!--<Button
        android:id="@+id/prev_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stock_bal"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="5dp"
        android:drawableLeft="@drawable/history"
        android:text="ADMIN'S PREVIOUS HISTORY"
        android:textColor="#FFFF"
        android:textSize="17sp"
        android:textStyle="bold"
        />-->


    <Button
        android:id="@+id/suggest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stock_bal"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="5dp"
        android:drawableLeft="@drawable/view"
        android:text="VIEW SUGGESTIONS"
        android:textColor="#FFFF"
        android:textSize="17sp"
        android:textStyle="bold"
        />
        <Button
            android:id="@+id/lgt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/suggest"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/view"
            android:text="LOGOUT"
            android:textColor="#FFFF"
            android:textSize="17sp"
            android:textStyle="bold"/>


</RelativeLayout>
</ScrollView>